{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./client/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "webpack"],
  "include": ["client/*"],
  "types": ["typePatches"]
}
